apiVersion: kpt.dev/v1
kind: Kptfile
metadata:
  name: nginx
  labels:
    env: dev
info:
  emails:
  - toto@example.com
  description: This is an example nginx package.
pipeline:
  mutators:
  - image: gcr.io/kpt-fn/set-labels:v0.1
    configMap:
      env: dev
  validators:
  - image: gcr.io/kpt-fn/kubeval:v0.3
    configMap:
      strict: "true"
